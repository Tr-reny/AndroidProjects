<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<RelativeLayout
    android:id="@+id/layout_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">
    <include layout="@layout/item_title"/>
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_title"
        tools:ignore="MissingConstraints">

        <include layout="@layout/item_movie" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_movie2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_movie"
        tools:ignore="MissingConstraints">

        <include layout="@layout/item_movie" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_director_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_movie2"
        tools:ignore="MissingConstraints">

        <include layout="@layout/item_director_title" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_director"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/layout_director_title"
        tools:ignore="MissingConstraints">

        <include layout="@layout/item_director" />
        <include layout="@layout/item_director" />
        <include layout="@layout/item_director" />
        <include layout="@layout/item_director" />
    </LinearLayout>


